<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#FFFFFF"
  android:scrollbars="vertical"
  >
    <TextView
  android:layout_width="fill_parent"
  android:layout_height="50dp"
  android:textColor="#FFFFFF"
  android:background="#000000"
  android:text="About"
  android:textSize="20sp"
  
  />
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="5dp" 
  android:layout_marginTop="5dp" 
  >
  
  <ImageView
  android:layout_width="150dp"
  android:layout_height="150dp"
  android:id="@+id/img_big"
  android:background="#000000"
  />
  <LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >
  
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/text_about_heading"
  android:text="About Olmeca"
  android:textSize="25sp"
  android:textColor="#000000"
  android:layout_marginLeft="5dp"
  />
  
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/text_about_subheading"
  android:text="Lorem ipsizzle dolor sit amet, ipsizzle consec tetizzle dolor adipiscing elit amet"
  android:textColor="#000000"
  android:layout_gravity="bottom"
  />
  </LinearLayout>
  
  </LinearLayout>
  
  
  <TextView
  android:layout_marginTop="5dp"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="Title"
  android:id="@+id/text_title"
  android:background="#000000"
  android:textColor="#FFFFFF"
  />
  
  
  
  <LinearLayout
   android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"  
  >
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:layout_weight="1"
  android:text="Lorem ipsizzle dolor sit amet, consectetizzle adipiscing elit. Nullam rizzle velizzle, fo stuff. Nullam rizzle velizzle, fo stuff."
  android:id="@+id/text_sub_title1"
  android:scrollbars="vertical"
  />
  <ImageView
  android:layout_marginRight="5dp"
  android:layout_marginLeft="5dp"
  android:layout_width="60dp"
  android:layout_height="70dp"  
  android:background="#000000"
  android:id="@+id/img_subtitle1"
  android:layout_gravity="right"
  />
  
  </LinearLayout>
  
    
  <LinearLayout
   android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"  
  >
  <ImageView
   android:layout_marginLeft="5dp"
  android:layout_width="60dp"
  android:layout_height="70dp"  
  android:background="#000000"
  android:id="@+id/img_subtitle2"
  />

  <TextView
  android:layout_marginLeft="5dp"
   android:layout_marginTop="5dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:text="Lorem ipsizzle dolor sit amet, consectetizzle adipiscing elit. Nullam rizzle velizzle, fo stuff. Nullam rizzle velizzle, fo stuff."
  android:id="@+id/text_sub_title2"
  android:scrollbars="vertical"
  />
  
  
  </LinearLayout>
  <TextView
  android:layout_marginLeft="5dp"
   android:layout_marginTop="15dp"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:text="http://www.olmecatequila.com/"
  android:id="@+id/text_link1"
  />
  
  <TextView
  android:layout_marginLeft="5dp"
  
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:textColor="#000000"
  android:text="http://www.olmecatequila.com/app/"
  android:id="@+id/text_link2"
  />
  
  
</LinearLayout>
