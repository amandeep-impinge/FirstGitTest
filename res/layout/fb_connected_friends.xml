<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF"
  android:orientation="vertical"
  >
  
   <LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  >
  <ImageView
  android:layout_marginLeft="5dp"
  android:layout_width="50dp"
  android:layout_height="65dp"
  android:id="@+id/image_user"
  android:layout_marginRight="5dp"
  android:background="#000000"
  
  />
  
  
  <!-- To show the  welcome text with changed orientation i.e  -->
  <!-- Vertical  one behind other-->
  <LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  
  >
  <TextView
  android:textColor="#000000"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/text_friendheading"
  android:text="Lorem ipsizzle dolor sit amet, consectetizzle adipiscing elit. Nullam rizzle velizzle, fo shizzle volutpat, suscipizzle dope, gravida vizzle, stuff."

  />
  
  
  
  </LinearLayout>

  
  </LinearLayout>
  
  
    <TextView
 android:layout_marginTop="15dp"

  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="Share your time lines with these friends"
  android:background="#000000"
  />
  
  <GridView
  android:layout_marginTop="5dp"
  android:layout_width="fill_parent"
  android:layout_height="300dp"
  android:background="#000000"
  android:id="@+id/grid_frnds"
  />
  <Button 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="GO"
  android:layout_gravity="center_horizontal"
  android:id="@+id/btn_go"
  />
</LinearLayout>
