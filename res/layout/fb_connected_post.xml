<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#FFFFFF"
  >
  <TextView
  android:layout_marginTop="10dp"
  android:layout_marginLeft="5dp"
  android:textColor="#000000"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Lorem ipsizzle dolor sit amet, consectetizzle adipiscing elit. Nullam rizzle gravida vizzle, stuff."
  android:id="@+id/text_post_heading"
  />
  
  
  
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="15dp"
  
  >
  <TextView
  android:layout_width="120dp"
  android:layout_height="wrap_content"
  android:text="Your photo"
  android:background="#000000"
  android:layout_marginLeft="5dp"
  /> 
  <TextView
  android:layout_marginLeft="5dp"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="Your sound"
  android:background="#000000"
  />

	
  
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  >
  <ImageView
  android:layout_marginLeft="5dp"
  android:layout_width="115dp"
  android:layout_height="180dp"
  android:background="#000000"
  android:id="@+id/img_post"
  >
  
 </ImageView>
 
 
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:orientation="vertical"
  >
  
  
  <LinearLayout
   android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="30sp"
  android:text="Artist"
  android:id="@+id/text_artist"
  android:textColor="#000000"
  />
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="-"

  android:textColor="#000000"
  />
  
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Title"
  android:id="@+id/text_title_sound"
  android:textColor="#000000"
  />
  
  </LinearLayout>
  
  
  
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="5dp"
  >
  <Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Relisten"
  android:id="@+id/btn_relisten"
  
  />
  
  <Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="not used"
  
  />
  
  </LinearLayout>
  
  <TextView
  android:layout_marginTop="5dp"
  android:layout_marginLeft="5dp"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="Your Position"
  android:background="#000000"
  />
   <TextView
android:layout_marginTop="5dp"
  android:layout_marginLeft="15dp"
  android:layout_width="fill_parent"
  android:layout_height="20sp"
  android:text="Title"
	android:textColor="#000000"
	android:id="@+id/text_position_title"
  />
  
  
  <LinearLayout
   android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
    >
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="City"
  android:id="@+id/text_city"
  android:textColor="#000000"
  />
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="-"

  android:textColor="#000000"
  />
  
  <TextView
   android:layout_marginLeft="15dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Location"
  android:id="@+id/text_location"
  android:textColor="#000000"
  />
  
  </LinearLayout>
  
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="5dp"
  android:layout_marginTop="5dp"
  >
  <Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Reposition"
  android:id="@+id/btn_reposition"
  
  />
  
  <Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="not used"
  
  />
  
  </LinearLayout>
  
  
  
  
  
  
  
  </LinearLayout>
  
 </LinearLayout>
 <TextView
 android:layout_marginTop="15dp"
  android:layout_marginLeft="5dp"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:text="Your Post"
  android:background="#000000"
  />
  <EditText
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:maxLines="3"
 android:layout_marginLeft="5dp"
  android:id="@+id/edit_text_post"
  
  />
  
  <Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right"
  android:text="Share it"
  android:id="@+id/btn_share_it_post"
  />
</LinearLayout>
